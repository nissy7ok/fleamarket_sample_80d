  .UserLogin__contents
    .UserLogin__contents__top
      .UserLogin__contents__nickname
        %label.user__title ニックネーム
        %span.user__subtitle 必須
        %form.UserLogin__contents__nickname__content
        %input{type: "text", placeholder: "例)フリマ次郎"}

    
      .UserLogin-contents-email
        %label.user__title メールアドレス
        %span.user__subtitle 必須
        %form.UserLogin-contents-nickname-content
        %input{type: 'text', placeholder: "PC・携帯どちらでも可"}
        

      .UserLogin-contents-password
        %label.user__title パスワード
        %span.user__subtitle 必須
        %form.UserLogin-contents-nickname-content
        %input{type: 'text', placeholder: "7文字以上の半角英数字"}
